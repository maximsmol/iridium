{
  "include": ["./**/*"],
  "exclude": [],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",

    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    "strict": true,
    "allowSyntheticDefaultImports": true,

    "isolatedModules": true,

    "types": ["vite/client"],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "camelCaseOnly",
        }
      }
    ]
  },
  "typeAcquisition": {
    "enable": false
  }
}
